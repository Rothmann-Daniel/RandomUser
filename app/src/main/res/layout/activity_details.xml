<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header с градиентом -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.Material3.Dark"
        android:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/text_primary"
            app:expandedTitleTextAppearance="@style/ExpandedTitleStyle"
            app:collapsedTitleTextAppearance="@style/CollapsedTitleStyle">

            <!-- Фоновое изображение -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/gradient_header"
                app:layout_collapseMode="parallax" />

            <!-- Градиент поверх изображения -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back_white"
                app:title="User Details" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Аватар поверх хедера -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="220dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="8dp"
        app:strokeWidth="4dp"
        app:strokeColor="@android:color/white">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="60dp">

            <!-- Информация пользователя -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi how are you today?"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I'm"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    tools:text="Ritthy Lopez" />

            </LinearLayout>

            <!-- Карточка с TabLayout -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- TabLayout -->
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@color/text_primary"
                        app:tabMode="fixed"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="@android:color/transparent"
                        app:tabIndicatorHeight="0dp"
                        app:tabBackground="@drawable/tab_background_selector"
                        app:tabSelectedTextColor="@color/text_primary"
                        app:tabTextColor="@android:color/white"
                        app:tabRippleColor="@color/white_20"
                        app:tabIconTint="@color/tab_icon_color_selector"
                        app:tabTextAppearance="@style/TabLayoutTextStyle" />

                    <!-- Контент -->
                    <FrameLayout
                        android:id="@+id/content_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="250dp"
                        android:padding="16dp">

                        <!-- Profile content -->
                        <LinearLayout
                            android:id="@+id/content_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tv_first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="12dp"
                                tools:text="First name: Ritthy" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider" />

                            <TextView
                                android:id="@+id/tv_last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="12dp"
                                tools:text="Last name: Lopez" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider" />

                            <TextView
                                android:id="@+id/tv_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="12dp"
                                tools:text="Gender: male" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider" />

                            <TextView
                                android:id="@+id/tv_age"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="12dp"
                                tools:text="Age: 33" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider" />

                            <TextView
                                android:id="@+id/tv_dob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="12dp"
                                tools:text="Date of birth: 1992-10-1" />

                        </LinearLayout>

                        <!-- Call content -->
                        <LinearLayout
                            android:id="@+id/content_call"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Phone"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:textStyle="bold"
                                android:paddingVertical="4dp" />

                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="8dp"
                                android:autoLink="phone"
                                tools:text="+1 234 567 8900" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider"
                                android:layout_marginVertical="12dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cell"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:textStyle="bold"
                                android:paddingVertical="4dp" />

                            <TextView
                                android:id="@+id/tv_cell"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="8dp"
                                android:autoLink="phone"
                                tools:text="+1 234 567 8901" />

                        </LinearLayout>

                        <!-- Email content -->
                        <LinearLayout
                            android:id="@+id/content_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Email address"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:textStyle="bold"
                                android:paddingVertical="4dp" />

                            <TextView
                                android:id="@+id/tv_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="8dp"
                                android:autoLink="email"
                                tools:text="ritthy.lopez@example.com" />

                        </LinearLayout>

                        <!-- Location content -->
                        <LinearLayout
                            android:id="@+id/content_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:textStyle="bold"
                                android:paddingVertical="4dp" />

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="8dp"
                                android:lineSpacingExtra="4dp"
                                tools:text="123 Main Street\nNew York, NY 10001\nUSA" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider"
                                android:layout_marginVertical="12dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Coordinates"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:textStyle="bold"
                                android:paddingVertical="4dp" />

                            <TextView
                                android:id="@+id/tv_coordinates"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="8dp"
                                tools:text="Lat: 40.7128, Lng: -74.0060" />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>